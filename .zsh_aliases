# Color definitions
alias grep='grep --color=auto'
alias ls='ls --color=auto'
alias ll='ls -alh'
alias la='ls -A'
alias l='ls -CF'

# Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Docker Compose shortcuts
alias dc='docker compose'
alias dce='dc exec'
alias dcr='dc run'
alias dcb='dc build'
alias dcd='dc down'
alias dclog='dc logs'
alias dcp='dc ps'
alias dci='dc images'
alias dcv='dc volumes'
alias dcn='dc networks'
alias dcs='dc start'
alias dcst='dc stop'
alias dcrs='dc restart'
alias dcre='dc restart'
alias dcrestart='dc down && dc up -d'
alias dcpl='dc pull'
alias dcdel='dc down && dc rm -f'
alias dcrm='dc rm -f'
alias dcup='dc up -d'

# Docker-specific
alias cdv='cd /var/dev'
alias cdw='cd /var/www'

alias art='php artisan'
alias tinker='art tinker'
alias phpunit='vendor/bin/phpunit'
alias sail='vendor/bin/sail'
alias pint='vendor/bin/pint'
alias phpstan='vendor/bin/phpstan'
alias php-cs-fixer='vendor/bin/php-cs-fixer'
alias phpcbf='vendor/bin/phpcbf'
alias phpcpd='vendor/bin/phpcpd'

# Composer shortcuts
alias ci='composer install'
alias cu='composer update'
alias cr='composer require'
alias cdu='composer dump-autoload'
alias ccp='composer clear-cache'

# General shortcuts
alias c='clear'
alias cl='clear'
alias e='exit'

# Git aliases
alias g='git'
alias gti='git'
alias nah='git reset --hard; git clean -df'
alias gs='git status'
alias ga='git add'
alias gaa='git add .'
alias gc='git commit'
alias gcm='git commit -m'
alias gca='git commit --amend'
alias gp='git push'
alias gpf='git push -f'
alias gpl='git pull'
alias gco='git checkout'
alias gcb='git checkout -b'
alias gbd='git branch -d'
alias gbm='git branch -m'
alias gr='git rebase'

alias lzd='lazydocker'

# Utilities
alias week='date +%V'
alias path='echo -e ${PATH//:/\\n}'
alias now='date +"%T"'
alias nowdate='date +"%d-%m-%Y"'

# Logs
alias log-nginx='tail -f /var/log/nginx/error.log'
alias log-php='tail -f /var/log/php-fpm/error.log'
